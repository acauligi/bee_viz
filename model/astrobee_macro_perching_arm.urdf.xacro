<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="perching_arm" params="bay xyz rpy">
    <link name="${bay}">
      <self_collide>false</self_collide>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find bee_viz)/model/meshes/perching_arm/base_link.stl" />
        </geometry>
        <material name="${bay}_beige" />
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find bee_viz)/model/meshes/perching_arm/base_link.stl" />
        </geometry>
      </collision>
    </link>
    <joint
      name="${bay}"
      type="fixed">
      <origin
        xyz="${xyz}"
        rpy="${rpy}" />
      <parent
        link="body" />
      <child
        link="${bay}" />
    </joint>

    <link name="${bay}_arm_proximal_link">
      <self_collide>false</self_collide>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find bee_viz)/model/meshes/perching_arm/arm_proximal_link.stl" />
        </geometry>
        <material name="${bay}_beige" />
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find bee_viz)/model/meshes/perching_arm/arm_proximal_link.stl" />
        </geometry>
      </collision>
    </link>
    <joint
      name="${bay}_arm_proximal_joint"
      type="revolute">
      <origin
        xyz="0.11945 0 0.065"
        rpy="0 1.57079632679 0" />
      <parent
        link="${bay}" />
      <child
        link="${bay}_arm_proximal_link" />
      <axis
        xyz="0 -1 0" />
      <limit
        effort="2.7"
        lower="-2.0944"
        upper="1.57079"
        velocity="0.12" />
    </joint>

    <link name="${bay}_arm_distal_link">
      <self_collide>false</self_collide>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find bee_viz)/model/meshes/perching_arm/arm_distal_link.stl" />
        </geometry>
        <material name="${bay}_beige" />
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find bee_viz)/model/meshes/perching_arm/arm_distal_link.stl" />
        </geometry>
      </collision>
    </link>
    <joint
      name="${bay}_arm_distal_joint"
      type="revolute">
      <origin
        xyz="-0.1 0 0"
        rpy="0 0 0" />
      <parent
        link="${bay}_arm_proximal_link" />
      <child
        link="${bay}_arm_distal_link" />
      <axis
        xyz="0 0 1" />
      <limit
        effort="2.7"
        lower="-1.57079"
        upper="1.57079"
        velocity="0.12" />
    </joint>

    <link name="${bay}_gripper_left_proximal_link">
      <self_collide>false</self_collide>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find bee_viz)/model/meshes/perching_arm/gripper_left_proximal_link.stl" />
        </geometry>
        <material name="${bay}_beige" />
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find bee_viz)/model/meshes/perching_arm/gripper_left_proximal_link.stl" />
        </geometry>
      </collision>
    </link>
    <joint
      name="${bay}_gripper_left_proximal_joint"
      type="revolute">
      <origin
        xyz="-0.039 -0.010002 -0.0497"
        rpy="0 0 0" />
      <parent
        link="${bay}_arm_distal_link" />
      <child
        link="${bay}_gripper_left_proximal_link" />
      <axis
        xyz="0 0 1" />
      <limit
        effort="0.1225"
        lower="0.349066"
        upper="0.698132"
        velocity="0.12" />
    </joint>

    <link name="${bay}_gripper_left_distal_link">
      <self_collide>false</self_collide>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find bee_viz)/model/meshes/perching_arm/gripper_left_distal_link.stl" />
        </geometry>
        <material name="${bay}_beige" />
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find bee_viz)/model/meshes/perching_arm/gripper_left_distal_link.stl" />
        </geometry>
      </collision>
    </link>
    <joint
      name="${bay}_gripper_left_distal_joint"
      type="revolute">
      <origin
        xyz="-0.05 0 0"
        rpy="0 0 0" />
      <parent
        link="${bay}_gripper_left_proximal_link" />
      <child
        link="${bay}_gripper_left_distal_link" />
      <axis
        xyz="0 0 1" />
      <limit
        effort="0.1225"
        lower="-1.22173"
        upper="-0.69813"
        velocity="0.12" />
    </joint>

    <link name="${bay}_gripper_right_proximal_link">
      <self_collide>false</self_collide>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find bee_viz)/model/meshes/perching_arm/gripper_right_proximal_link.stl" />
        </geometry>
        <material name="${bay}_beige" />
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh filename="file:///home/marco/scp_se3/catkin_ws/src/bee_viz/model/meshes/perching_arm/gripper_right_proximal_link.stl" />
        </geometry>
      </collision>
    </link>
    <joint
      name="${bay}_gripper_right_proximal_joint"
      type="revolute">
      <origin
        xyz="-0.039 0.010002 -0.0497"
        rpy="0 0 0" />
      <parent
        link="${bay}_arm_distal_link" />
      <child
        link="${bay}_gripper_right_proximal_link" />
      <axis
        xyz="0 0 1" />
      <limit
        effort="0.1225"
        lower="-0.698132"
        upper="-0.349066"
        velocity="0.12" />
    </joint>

    <link name="${bay}_gripper_right_distal_link">
      <self_collide>false</self_collide>
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find bee_viz)/model/meshes/perching_arm/gripper_right_distal_link.stl" />
        </geometry>
        <material name="${bay}_beige" />
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find bee_viz)/model/meshes/perching_arm/gripper_right_distal_link.stl" />
        </geometry>
      </collision>
    </link>
    <joint
      name="${bay}_gripper_right_distal_joint"
      type="revolute">
      <origin
        xyz="-0.05 0 0"
        rpy="0 0 0" />
      <parent
        link="${bay}_gripper_right_proximal_link" />
      <child
        link="${bay}_gripper_right_distal_link" />
      <axis
        xyz="0 0 1" />
      <limit
        effort="0.1225"
        lower="0.69813"
        upper="1.22173"
        velocity="0.12" />
    </joint>
    <material name="${bay}_beige">
      <texture filename="file://$(find bee_viz)/model/materials/textures/beige.png" />
    </material>
  </xacro:macro>
</robot>
